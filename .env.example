# ============================================
# BINGX TRADING BOT - Конфигурация окружения
# ============================================
#
# Важно:
# 1. Скопируйте этот файл в `.env` в корне проекта.
# 2. Заполните все значения в соответствии с вашим окружением.
# 3. НИКОГДА не коммитьте файл `.env` в систему контроля версий! :cite[2]:cite[6]
# 4. Все секретные ключи должны быть надежно защищены.
#
# ============================================
# Окружение и базовые настройки приложения
# ============================================

# Режим работы: development, staging, production
ENVIRONMENT=development

# Уровень логирования: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Хост и порт для веб-интерфейса и API
HOST=0.0.0.0
PORT=5000

# Базовый URL приложения (для генерации ссылок)
APP_URL=http://localhost:5000

# ============================================
# 1. API BingX Exchange :cite[6]
# ============================================

# API Key от BingX (обязательный)
BINGX_API_KEY=your_bingx_api_key_here

# Secret Key от BingX (обязательный, храните в секрете!)
BINGX_SECRET_KEY=your_bingx_secret_key_here

# Базовый URL API BingX (обычно не меняется)
BINGX_API_BASE=https://open-api.bingx.com

# Лимит запросов в минуту (по умолчанию 120)
API_RATE_LIMIT=120

# Таймаут запросов к API (в секундах)
REQUEST_TIMEOUT=30

# ============================================
# 2. База данных и кэширование
# ============================================

# URL подключения к базе данных (SQLite, PostgreSQL, etc.)
# Пример для PostgreSQL: postgresql://user:password@localhost:5432/dbname
DATABASE_URL=sqlite:///data/trading_bot.db

# URL подключения к Redis (для кэширования и сессий)
REDIS_URL=redis://localhost:6379/0

# ============================================
# 3. Телеграм-уведомления
# ============================================

# Токен бота Telegram для оповещений
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ID чата или канала для отправки уведомлений
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Порог уверенности для отправки уведомлений (0.0 - 1.0)
ALERT_CONFIDENCE_THRESHOLD=0.7

# ============================================
# 4. Внешние API (опционально)
# ============================================

# API Key для Alpha Vantage (фундаментальный анализ)
ALPHA_VANTAGE_KEY=your_alpha_vantage_key_here

# API Key для новостных сервисов (например, NewsAPI)
NEWS_API_KEY=your_news_api_key_here

# ============================================
# 5. Risk Management и торговые параметры
# ============================================

# Начальный баланс виртуального портфеля (USDT)
INITIAL_BALANCE=10000

# Риск на сделку (доля от баланса, 0.01 = 1%)
RISK_PER_TRADE=0.02

# Максимальный размер позиции (доля от баланса, 0.1 = 10%)
MAX_POSITION_SIZE=0.1

# Символы для торговли (через запятую)
SYMBOLS=BTC-USDT,ETH-USDT,SOL-USDT,XRP-USDT

# Таймфреймы для анализа (через запятую)
TIMEFRAMES=15m,1h,4h

# ============================================
# 6. Модели машинного обучения
# ============================================

# Путь к файлу модели ML
ML_MODEL_PATH=data/models/trading_model.pkl

# Путь к файлу scalera для ML
ML_SCALER_PATH=data/models/scaler.pkl

# Порог уверенности ML модели (0.0 - 1.0)
ML_CONFIDENCE_THRESHOLD=0.6

# ============================================
# 7. Резервное копирование и безопасность
# ============================================

# Ключ шифрования для конфиденциальных данных
ENCRYPTION_KEY=your_encryption_key_here

# Расписание резервного копирования (daily, weekly, monthly)
BACKUP_SCHEDULE=daily

# Максимальное количество хранимых резервных копий
MAX_BACKUPS=30

# ============================================
# 8. Мониторинг (Prometheus, Grafana)
# ============================================

# Порт для метрик Prometheus
PROMETHEUS_PORT=9090

# Хост и порт для Grafana (для дашбордов)
GRAFANA_URL=http://localhost:3000

# ============================================
# 9. Дополнительные настройки
# ============================================

# Включить/выключить бэктестинг при запуске (true/false)
ENABLE_BACKTESTING=true

# Включить/выключить веб-интерфейс (true/false)
ENABLE_WEB_INTERFACE=true

# Включить/выключить исполнение сделок (false для песочницы)
ENABLE_TRADE_EXECUTION=false

# Язык интерфейса (ru, en)
LANGUAGE=ru